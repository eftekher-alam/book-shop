@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-4">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header text-center text-light">Quantity of Books</div>
                <div class="card-body">
                    <h4>Total Books : @ViewBag.Book</h4>
                    <div class="text-center">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-sm btn-outline-info">View Books</a>
                        <a asp-controller="Book" asp-action="Create" class="btn btn-sm btn-outline-info">Create Book</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header text-center text-light">Total Category</div>
                <div class="card-body">
                    <h4>Total Category : @ViewBag.TotalCategory</h4>
                    <div class="text-center">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-outline-info">View Category</a>
                        <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-outline-info">Create Category</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header text-center text-light">Catagory wise quantity of books</div>
                <div class="card-body">
                    @{
                        if (ViewBag.Categories != null)
                        {
                            foreach (var item in ViewBag.Categories)
                            {
                                <div class="row">
                                    <div class="col-6">
                                        <h4>
                                            @item.Name : 
                                            @{
                                                if (item.books != null)
                                                {
                                                    int sum = 0;
                                                    foreach (var book in item.books)
                                                    {
                                                        sum++;
                                                    }
                                                    @sum
                                                }
                                            }
                                        </h4>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a asp-controller="Book" asp-action="Index" asp-route-CName="@item.Name" class="btn btn-sm btn-outline-info">View Books</a>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>