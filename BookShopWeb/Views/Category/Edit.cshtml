@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container pt-3">
    <div class="row">
        <div class="col-6 offset-3 border p-4">
            <h3 class="text-light text-center">Edit Category</h3>
            <hr />
            <form method="post" asp-action="Edit">
                <input type="hidden" name="nothing" value="1234" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-outline-success btn-sm w-25">Save</button>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary w-25">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

