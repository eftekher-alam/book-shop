@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">

    <div class="row pt-2 pb-2">
        <div class="col-6">
            <h3 class="text-light">Category Index</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-sm btn-outline-info">
                <i class="bi bi-plus-square"></i> Create
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="text-center">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Name</td>
                            <td>@x.DisplayOrder</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h4 class="text-center text-danger">There is no record of categroy</h4>
    }
</div>

